<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
        <!--Email template -->
        <record id="email_dii_email_template" model="mail.template">
            <field name="name">Demande DII: Evoyer par email</field>
            <field name="model_id" ref="e_formulaire.model_project_task"/>
            <field name="email_from">${(object.company_id.email_formatted)}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="subject">Demande (Ref ${object.number or 'n/a'})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Bonjour,
                        Mr, ${object.partner_id.responsable},
                        <br /><br />
                        Votre demande d'autorisation d'installation industrielle sous ref: ${object.number or 'n/a'} a été approuver.
                        <br /><br />
                        Ci-joint et l'attestation d'autorisation d'installation industrielle.
                    </p>
                </div>
            </field>
            <!--
            <field name="report_template" ref="e_formulaire.attestation_dii_pdf_report"/>
            <field name="report_name">Attestation ${(object.number) or ''}</field>
            -->
        </record>
    </data>
</odoo>